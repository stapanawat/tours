{
    "name": "new-project-root",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "postinstall": "npm run install:all",
        "install:all": "concurrently \"npm run install:backend\" \"npm run install:frontend\"",
        "install:backend": "npm install --prefix backend && composer install --working-dir=backend",
        "install:frontend": "npm install --prefix frontend",
        "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:backend": "npm run serve --prefix backend",
        "dev:frontend": "npm run dev --prefix frontend",
        "build": "concurrently \"npm run build:backend\" \"npm run build:frontend\"",
        "build:backend": "npm run build --prefix backend",
        "build:frontend": "npm run build --prefix frontend",
        "lint": "concurrently \"npm run lint:backend\" \"npm run lint:frontend\"",
        "lint:backend": "backend/vendor/bin/pint",
        "lint:frontend": "npm run lint --prefix frontend"
    },
    "devDependencies": {},
    "dependencies": {
        "concurrently": "^9.1.2",
        "@nuxtjs/i18n": "^10.2.3",
        "nuxt-gtag": "^4.1.0"
    }
}